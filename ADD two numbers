/**
 * Definition for singly-linked list.
 * function ListNode(val, next) {
 *     this.val = (val===undefined ? 0 : val)
 *     this.next = (next===undefined ? null : next)
 * }
 */
/**
 * @param {ListNode} l1
 * @param {ListNode} l2
 * @return {ListNode}
 */
var addTwoNumbers = function(l1, l2) {
  // Dummy node to start the result list
  let dummy = new ListNode(0);
  let current = dummy;
  
  let carry = 0;

  // Loop while there is something to add
  while (l1 !== null || l2 !== null || carry !== 0) {
    let sum = carry;

    // If l1 has a value, add it
    if (l1 !== null) {
      sum += l1.val;
      l1 = l1.next;
    }

    // If l2 has a value, add it
    if (l2 !== null) {
      sum += l2.val;
      l2 = l2.next;
    }

    // New digit and carry
    carry = Math.floor(sum / 10);
    let digit = sum % 10;

    // Add digit to result list
    current.next = new ListNode(digit);
    current = current.next;
  }

  // The result starts after the dummy node
  return dummy.next;
};
